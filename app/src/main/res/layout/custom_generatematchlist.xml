<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/niceblue">

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/Skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Name"
        android:layout_marginStart="55dp"
        android:text="Skill"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/Fitness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fitness"
        android:textSize="17sp"
        android:layout_alignBaseline="@+id/Skill"
        android:layout_alignBottom="@+id/Skill"
        android:layout_alignStart="@+id/NetSkill" />
    <TextView
        android:id="@+id/Aware"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aware"
        android:textSize="17sp"
        android:layout_alignBaseline="@+id/NetSkill"
        android:layout_alignBottom="@+id/NetSkill"
        android:layout_alignStart="@+id/Skill" />
    <TextView
        android:id="@+id/NetSkill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Net Skill"
        android:textSize="17sp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/Fitness"
        android:layout_toEndOf="@+id/Aware"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/Request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Request"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />


</RelativeLayout>