<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/tool_bar"
        android:id="@+id/edit_content_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_content_bar"
        android:id="@+id/Contentlayout"
        android:background="@drawable/editcontent_top"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@color/niceblack"
            android:textStyle="bold"
            android:id="@+id/Contenthead"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:text="Content"
            android:layout_marginStart="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/Editlayout1"
        android:layout_below="@+id/Contentlayout"
        android:layout_height="40dp"
        android:background="@drawable/editcontent_middle"
        >
        <EditText
            android:id="@+id/Content1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:hint="Content"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:layout_marginStart="17dp"
            android:background="@color/ltltltgrey"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/Editlayout2"
        android:layout_below="@+id/Editlayout1"
        android:layout_height="40dp"
        android:background="@drawable/editcontent_middle"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:hint="Content"
            android:id="@+id/Content2"
            android:textSize="15sp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="2dp"
            android:background="@color/ltltltgrey"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/savechanges"
        android:layout_height="40dp"
        android:background="@drawable/editcontent_bottom"
        android:layout_below="@+id/Editlayout2"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:text="Save"
            android:id="@+id/Save"
            android:textColor="@color/ltltgrey"
            android:background="@color/darkestblue"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="45dp" />
    </RelativeLayout>
</RelativeLayout>