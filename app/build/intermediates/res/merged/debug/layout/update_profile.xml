<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ltltgrey">
    <include layout="@layout/tool_bar"
        android:id="@+id/edit_bar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_bar"
        android:id="@+id/Header"
        android:layout_marginTop="20dp"
        android:text="Profile Contents"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:gravity="center"
        android:textSize="18sp"/>
    <ExpandableListView
        android:layout_below="@+id/Header"
        android:layout_marginTop="25dp"
        android:groupIndicator="@null"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/ProfileContents"
        android:divider="@color/grey"
        android:childDivider="@color/black"
        android:dividerHeight="2.75dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProfileContents"
        android:id="@+id/Security"
        android:text="Security"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:gravity="center"
        android:textSize="18sp"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:id="@+id/securitycontents"
        android:layout_below="@+id/Security"/>


</RelativeLayout>
    </ScrollView>