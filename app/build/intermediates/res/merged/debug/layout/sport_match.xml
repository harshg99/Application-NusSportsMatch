<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/verylightyellow"
    android:weightSum="4">

    <Spinner
        android:id="@+id/SpinnerSportsSelect"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Select Sport for Match-Up"
        android:textColor="@color/chatblack"
        android:textSize="22sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Date"
        android:textColor="@color/niceblack"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_below="@+id/SpinnerSportsSelect"
        android:layout_alignStart="@+id/SpinnerSportsSelect" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:text="Date Picker"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textColor="@color/niceblack"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Time Picker"
        android:background="?android:attr/selectableItemBackground"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:id="@+id/generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Matches"
        android:background="@drawable/buttontype2"
        android:layout_below="@+id/button3"
        android:layout_toEndOf="@+id/textView7" />

    <ListView
        android:id="@+id/ListMatch"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/generate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />


</RelativeLayout>